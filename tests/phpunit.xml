<?xml version="1.0" encoding="utf-8" ?>
<phpunit bootstrap="./bootstrap.php">
    <testsuite name='TransparentCQRS Test Suite'>
        <directory suffix='.php'>./TransparentCQRS</directory>
    </testsuite>
    <filter>
        <whitelist>
            <directory>./../src/</directory>
            <exclude>
                <directory>./tests</directory>
                <directory>./vendor</directory>
            </exclude>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-html" target="./logs/report" charset="UTF-8"
             yui="true" highlight="false"
             lowUpperBound="35" highLowerBound="70"/>
        <log type="coverage-clover" target="./logs/coverage.xml"/>
        <log type="testdox-html" target="../doc/component_behaviour.html"/>
        <log type="testdox-text" target="../doc/component_behaviour.txt"/>
    </logging>
</phpunit>